      let getOriginOrgId = tdArr[3];
          
      $.ajax({
        url: `/updatingUserSubmit?getOriginOrgId=${getOriginOrgId}&getOrgId=${selectedValues.getOrgId}'&getOrgName=${selectedValues.getOrgName}
