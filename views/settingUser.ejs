        &getGroupType=${selectedValues.getGroupType}&getAge=${selectedValues.getAge}&getSex=${selectedValues.getSex}&getPlatform=${selectedValues.getPlatform}&getNote=${selectedValues.getNote}`,
        dataType: 'json',
        method: 'GET',
        success: result => {
          if(result) {
            console.log(JSON.stringify(result, null, 2));
            alert(`정상적으로 수정되었습니다.`);

            coachingModalClose();
            location.reload();
          }
        }
      });

      //  초기화
      selectedValues = {
